<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta http-equiv="expires" content="0">
		<meta http-equiv="pragma" content="no-cache">
		<title>
			{% block title %}Innomall
			{% endblock %}
		</title>

		{% block stylesheets %}
			<!-- FontAwesome -->
			<link
			rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

			<!-- Bootstrap 4 (because your HTML is Bootstrap 4-style) -->
			<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" rel="stylesheet">

			<!-- Google Fonts -->
			<link
			href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

			<!-- Local CSS -->
			<link href="{{ asset('vendors/nprogress/nprogress.css') }}" rel="stylesheet">
			<link href="{{ asset('build/css/maria/base_style.css') }}" rel="stylesheet">
			<link href="{{ asset('build/css/oussema/events.css') }}" rel="stylesheet">
			<link href="{{ asset('build/css/maria/product/product.css') }}" rel="stylesheet">
			<link href="{{ asset('build/css/maria/product/add_product.css') }}" rel="stylesheet">
			<link href="{{ asset('build/css/maria/product/edit_product.css') }}" rel="stylesheet">
			<link href="{{ asset('build/css/maria/discount.css') }}" rel="stylesheet">
			<link href="{{ asset('build/css/maria/schedule.css') }}" rel="stylesheet">
			<link href="{{ asset('build/css/maria/dashboard_style.css') }}" rel="stylesheet">
			<link href="{{ asset('build/css/maria/profile.css') }}" rel="stylesheet">
			<link href="{{ asset('build/css/maria/contact_admin.css') }}" rel="stylesheet">
		{% endblock %}
	</head>
	<body class="nav-md">
		<div class="container body">
			<div class="main_container">

				{% include 'maria_templates/bars.html.twig' %}

				<div class="right_col" role="main">
					{% for message in app.flashes('success') %}
						<div class="alert alert-success">{{ message }}</div>
					{% endfor %}
					{% block body %}{% endblock %}
				</div>
			</div>
		</div>

		{% block javascripts %}
			<!-- jQuery (only once) -->
			<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
			<!-- Bootstrap 4 Bundle (with Popper.js included) -->
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

			<!-- FontAwesome JS -->
			<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>

			<!-- Chart.js (only once) -->
			<script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"></script>

			<!-- Local JS -->
			<script src="{{ asset('build/js/maria/base.js') }}"></script>
			<script src="{{ asset('build/js/maria/dashboard.js') }}"></script>
			<script src="https://cdn.jsdelivr.net/npm/@hotwired/stimulus@3.2.1/dist/stimulus.umd.js"></script>
			<script src="https://cdn.jsdelivr.net/npm/@symfony/ux-chartjs@2.x/dist/ux-chartjs.umd.min.js"></script>

			<script>
				const app = Stimulus.Application.start();
app.register('symfony--ux-chartjs--chart', SymfonyUxChartjs.Chart);
			</script>

		{% endblock %}
	</body>
</html>
