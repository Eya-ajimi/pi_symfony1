{% extends "maria_templates/base.html.twig" %}
{% block title %}Events{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .invalid-feedback {
            color: #dc3545;
            font-size: 0.875em;
            margin-top: 0.25rem;
        }
        .is-invalid {
            border-color: #dc3545;
        }
        .event-card {
            transition: transform 0.2s;
        }
        .event-card:hover {
            transform: translateY(-5px);
        }
    </style>
{% endblock %}

{% block body %}
<div class="content-container">
    <div class="content-card mb-5">
        <h2 class="mb-4">Create New Event</h2>
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                            <div class="mb-3">
                                {{ form_label(form.nomOrganisateur, 'Shop Name', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.nomOrganisateur, {'attr': {'class': 'form-control' ~ (form.nomOrganisateur.vars.valid ? '' : ' is-invalid')}}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.nomOrganisateur) }}
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control' ~ (form.description.vars.valid ? '' : ' is-invalid'), 'rows': 5}}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.description) }}
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.dateDebut, 'Start Date', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control' ~ (form.dateDebut.vars.valid ? '' : ' is-invalid')}}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.dateDebut) }}
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.dateFin, 'End Date', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.dateFin, {'attr': {'class': 'form-control' ~ (form.dateFin.vars.valid ? '' : ' is-invalid')}}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.dateFin) }}
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.emplacement, 'Location', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.emplacement, {'attr': {'class': 'form-control' ~ (form.emplacement.vars.valid ? '' : ' is-invalid')}}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.emplacement) }}
                                </div>
                            </div>

                            <div class="d-flex justify-content-end mt-3">
                                <button type="submit" class="btn btn-success">Create</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content-card">
        <h2 class="mb-4">Your Events</h2>
        <div class="row">
            {% for event in events %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card event-card h-100 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ event.nomOrganisateur }}</h5>
                            <p class="card-text text-muted">{{ event.description }}</p>
                            <p class="card-text"><strong>{{ event.emplacement }}</strong></p>
                            <p class="card-text">
                                <small class="text-muted">
                                    {{ event.dateDebut|date('M d, Y') }} â€” {{ event.dateFin|date('M d, Y') }}
                                </small>
                            </p>
                            <div class="mt-auto d-flex justify-content-between pt-3">
                                <a href="{{ path('event_edit', {'id': event.id}) }}" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a href="{{ path('event_delete', {'id': event.id}) }}" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this event?')">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">
                        No events found. Create your first event above.
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}