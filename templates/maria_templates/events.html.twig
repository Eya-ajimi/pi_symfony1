{% extends "maria_templates/base.html.twig" %}
{% block title %}Events{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/events.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}

{% block body %}
<div class="content-container">
    <div class="content-card mb-5">
        <div class="brand-badge">Events</div>
        <div class="brand-pattern"></div>
        <h2 class="mb-4">Create New Event</h2>
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                            <div class="mb-3">
                                {{ form_label(form.nomOrganisateur, 'Shop Name', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.nomOrganisateur, {'attr': {'class': 'form-control' ~ (form.nomOrganisateur.vars.valid ? '' : ' is-invalid')}}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.nomOrganisateur) }}
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control' ~ (form.description.vars.valid ? '' : ' is-invalid'), 'rows': 5}}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.description) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.dateDebut, 'Start Date', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control' ~ (form.dateDebut.vars.valid ? '' : ' is-invalid')}}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.dateDebut) }}
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    {{ form_label(form.dateFin, 'End Date', {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.dateFin, {'attr': {'class': 'form-control' ~ (form.dateFin.vars.valid ? '' : ' is-invalid')}}) }}
                                    <div class="invalid-feedback">
                                        {{ form_errors(form.dateFin) }}
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.emplacement, 'Location', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.emplacement, {'attr': {'class': 'form-control' ~ (form.emplacement.vars.valid ? '' : ' is-invalid')}}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.emplacement) }}
                                </div>
                            </div>

                            <div class="d-flex justify-content-end mt-4">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-plus-circle me-2"></i> Create Event
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content-card">
        <div class="brand-pattern"></div>
        <h2 class="mb-4">Your Events</h2>
        <div class="row">
            {% for event in events %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card event-card">
                        {% if loop.first %}
                            <div class="featured-tag">Featured</div>
                        {% endif %}
                        <div class="card-header">
                            {{ event.nomOrganisateur }}
                        </div>
                        <div class="card-body">
                            <!-- Creative decorative elements -->
                            <div class="card-decoration"></div>
                            <div class="card-decoration"></div>
                            <div class="card-decoration"></div>
                            
                            <p class="card-text">{{ event.description|length > 100 ? event.description|slice(0, 100) ~ '...' : event.description }}</p>
                            
                            <div class="location-badge">
                                <i class="fas fa-map-marker-alt me-1"></i> {{ event.emplacement }}
                            </div>
                            
                            <div class="date-pill">
                                <i class="far fa-calendar-alt"></i>
                                {{ event.dateDebut|date('M d, Y') }} â€” {{ event.dateFin|date('M d, Y') }}
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="event-actions">
                                <a href="{{ path('event_edit', {'id': event.id}) }}" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit me-1"></i> Edit
                                </a>
                                <a href="{{ path('event_delete', {'id': event.id}) }}" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this event?')">
                                    <i class="fas fa-trash-alt me-1"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i> No events found. Create your first event above.
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}