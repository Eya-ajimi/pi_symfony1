{% extends "maria_templates/base.html.twig" %}
{% block title %}Events{% endblock %}

{% block body %}
<div class="content-container">
    <div class="content-card mb-5">
        <h2 class="mb-4">Create New Event</h2>
        <div class="row justify-content-center">
            <div class="col-md-10 col-lg-8">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <div class="d-flex justify-content-end mt-3">
                                <button type="submit" class="btn btn-success">Create</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="content-card">
        <h2 class="mb-4">Your Events</h2>
        <div class="row">
            {% for event in events %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card event-card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{ event.nomOrganisateur }}</h5>
                            <p class="card-text text-muted">{{ event.description }}</p>
                            <p class="card-text"><strong>{{ event.emplacement }}</strong></p>
                            <p class="card-text">
                                <small class="text-muted">
                                    {{ event.dateDebut|date('M d, Y') }} â€” {{ event.dateFin|date('M d, Y') }}
                                </small>
                            </p>
                            <div class="mt-auto d-flex justify-content-between pt-3">
                                <a href="{{ path('event_edit', {'id': event.id}) }}" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a href="{{ path('event_delete', {'id': event.id}) }}" class="btn btn-sm btn-outline-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <p class="text-muted">No events found.</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
