{% extends "maria_templates/base.html.twig" %}

{% block title %}Shop Owner with admin Chat
{% endblock %}

{% block stylesheets %}
	{{ parent() }}

	<style>:root
	{
		--primary-yellow: #FFF07B;
		--primary-blue: #DBF0FE;
		--primary-purple: #4B49AC;
		--text-dark: #333333;
		--text-light: #FFFFFF;
		--border-color: #DDDDDD;
		--hover-yellow: #FFF07B;
		--hover-blue: #DBF0FE;
		--shadow-color: rgba(0, 0, 0, 0.05);
		--sidebar-width: 230px;
		--sidebar-collapsed-width: 70px;
		--menu-item-spacing: 12px;
		--transition-speed: 0.3s;
	}

	/* Admin-Shop Owner Chat CSS */
	.big-container {
		padding: 20px;
		max-width: 1200px;
		margin: 0 auto;
	}

	.chat-card {
		height: 600px;
		padding: 0;
	}

	.card {
		box-shadow: 0 2px 8px var(--shadow-color);
		border: 1px solid var(--border-color);
		border-radius: 0.375rem;
		overflow: hidden;
	}

	.chat-container {
		display: flex;
		flex-direction: column;
		height: 100%;
		overflow: hidden;
	}

	/* Chat Header */
	.chat-header {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 12px 16px;
		background: var(--text-light);
		border-bottom: 1px solid var(--border-color);
		transition: background-color var(--transition-speed);
	}

	.user-info {
		display: flex;
		align-items: center;
	}

	.user-details {
		margin-left: 12px;
	}

	.user-details h5 {
		margin-bottom: 2px;
		font-weight: 600;
		color: var(--text-dark);
		font-size: 0.95rem;
	}

	.status {
		font-size: 0.7rem;
		display: flex;
		align-items: center;
		color: var(--text-dark);
	}

	.status:before {
		content: '';
		display: inline-block;
		width: 6px;
		height: 6px;
		border-radius: 50%;
		margin-right: 4px;
	}

	.status.online:before {
		background-color: #28a745;
	}

	.status.offline:before {
		background-color: #6c757d;
	}

	/* Avatar */
	.avatar {
		width: 32px;
		height: 32px;
		border-radius: 50%;
		object-fit: cover;
		border: 1px solid var(--primary-purple);
	}

	/* Chat Messages */
	.chat-messages {
		flex: 1;
		padding: 16px;
		overflow-y: auto;
		background-color: #f8f9fa;
	}

	.message {
		display: flex;
		margin-bottom: 16px;
		max-width: 75%;
		position: relative;
	}

	.admin-message {
		margin-left: auto;
		flex-direction: row-reverse;
	}

	.shop-message {
		margin-right: auto;
	}

	.message-content {
		background-color: var(--primary-blue);
		border-radius: 0.375rem;
		padding: 10px 14px;
		box-shadow: 0 1px 1px var(--shadow-color);
		margin: 0 8px;
		position: relative;
		color: var(--text-dark);
		font-size: 0.9rem;
	}

	/* Message arrow for shop owner */
	.shop-message .message-content:before {
		content: '';
		position: absolute;
		left: -6px;
		top: 12px;
		border-top: 6px solid transparent;
		border-bottom: 6px solid transparent;
		border-right: 6px solid var(--primary-blue);
	}

	/* Message arrow for admin */
	.admin-message .message-content:before {
		content: '';
		position: absolute;
		right: -6px;
		top: 12px;
		border-top: 6px solid transparent;
		border-bottom: 6px solid transparent;
		border-left: 6px solid var(--primary-purple);
	}

	.admin-message .message-content {
		background-color: var(--primary-purple);
		color: var(--text-light);
	}

	.message-content p {
		margin-bottom: 4px;
		line-height: 1.4;
	}

	.time {
		font-size: 0.65rem;
		color: var(--text-dark);
		opacity: 0.7;
		text-align: right;
		display: block;
	}

	.admin-message .time {
		color: var(--text-light);
		opacity: 0.8;
	}

	/* Date Separator */
	.date-separator {
		text-align: center;
		margin: 16px 0;
		position: relative;
	}

	.date-separator span {
		background-color: #f8f9fa;
		padding: 4px 12px;
		font-size: 0.7rem;
		color: var(--text-dark);
		position: relative;
		z-index: 1;
		border-radius: 12px;
		border: 1px solid var(--border-color);
	}

	.date-separator:before {
		content: '';
		height: 1px;
		background-color: var(--border-color);
		position: absolute;
		top: 50%;
		left: 0;
		right: 0;
		z-index: 0;
	}

	/* Chat Input - Smaller, more professional styling */
	.chat-input {
		padding: 8px 12px;
		background-color: #f8f9fa;
		border-top: 1px solid var(--border-color);
	}

	.message-form {
		margin: 0;
	}

	.chat-input .form-control {
		border-radius: 3px;
		padding: 4px 8px;
		height: 32px;
		border: 1px solid var(--border-color);
		transition: all var(--transition-speed);
		font-size: 0.85rem;
		box-shadow: none;
	}

	.chat-input .form-control:focus {
		border-color: var(--primary-purple);
		box-shadow: 0 0 0 0.15rem rgba(75, 73, 172, 0.15);
	}

	.chat-input .input-group {
		position: relative;
		margin-bottom: 0;
		display: flex;
		align-items: center;
	}

	.send-btn {
		border-radius: 3px;
		display: flex;
		align-items: center;
		justify-content: center;
		background-color: var(--primary-purple);
		border-color: var(--primary-purple);
		transition: all var(--transition-speed);
		margin-left: 8px;
		padding: 4px 10px;
		height: 32px;
		font-size: 0.85rem;
	}

	.send-btn:hover {
		background-color: var(--primary-yellow);
		border-color: var(--primary-yellow);
		color: var(--text-dark);
	}

	.send-btn i {
		margin-right: 4px;
		font-size: 0.8rem;
	}

	/* Card Header Styling */
	.card-header.bg-primary {
		background-color: var(--primary-purple) !important;
		border-bottom: none;
		padding: 12px 16px;
	}

	.card-title {
		font-weight: 600;
		letter-spacing: 0.5px;
		font-size: 1rem;
	}

	/* Responsive adjustments */
	@media(max-width: 768px) {
		.message {
			max-width: 90%;
		}

		.chat-card {
			height: calc(100vh - 120px);
		}

		.send-btn span {
			display: none;
		}

		.send-btn i {
			margin-right: 0;
		}

		.chat-input .form-control {
			height: 28px;
			font-size: 0.8rem;
		}

		.send-btn {
			height: 28px;
			padding: 4px 8px;
		}
	}
</style>{% endblock %}{% block body %}
<div class="big-container">
	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-header bg-primary">
					<h4 class="card-title text-white mb-0">Chat with Admin Team</h4>
				</div>
				<div class="card-body chat-card">
					<div class="chat-container">
						<div class="chat-header">
							<div class="user-info">
								<div class="user-details">
									<h5>{{ shopOwner.nom }}</h5>
									<span class="status online">Online</span>
								</div>
							</div>
						</div>

						<div class="chat-messages" id="chatMessages">
							{% for message in messages %}
								<div class="message {% if message.sender.id == shopOwner.id %}shop-message{% else %}admin-message{% endif %}">
									{% if message.sender.id == shopOwner.id %}
										<div class="message-content">
											<p>{{ message.content }}</p>
											<span class="time">{{ message.createdAt|date('h:i A') }}</span>
										</div>
									{% else %}
										<div class="message-content">
											<p>{{ message.content }}</p>
											<span class="time">{{ message.createdAt|date('h:i A') }}</span>
										</div>
									{% endif %}
								</div>
							{% endfor %}
						</div>

						<div class="chat-input">
							{{ form_start(form, {'attr': {'class': 'message-form'}}) }}
							<div class="input-group">
								{{ form_widget(form.content, {'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Type your message...'
                                }}) }}
								<button class="btn btn-primary send-btn" type="submit">
									<i class="fas fa-paper-plane"></i>
									<span>Send</span>
								</button>
							</div>
							{{ form_end(form) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}{% block javascripts %}
{{ parent() }}
<script>
	document.addEventListener('DOMContentLoaded', function () { // Scroll to bottom
const chatMessages = document.getElementById('chatMessages');
chatMessages.scrollTop = chatMessages.scrollHeight;

// AJAX form submission
const form = document.querySelector('.message-form');
if (form) {
form.addEventListener('submit', function (e) {
e.preventDefault();

const formData = new FormData(form);

fetch('{{ path('contact_admin') }}', {
method: 'POST',
body: formData
}).then(response => {
if (response.redirected) {
window.location.href = response.url;
}
});
});
}
});
</script>{% endblock %}
