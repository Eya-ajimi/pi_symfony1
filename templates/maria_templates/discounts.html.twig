{% extends "maria_templates/base.html.twig" %}


{% block title %}System Settings
{% endblock %}

{% block body %}
	<h1>System Settings</h1>
	<div class="card">
		<div class="card-body">
			<form>
				<div class="mb-3">
					<label class="form-label">Site Title</label>
					<input type="text" class="form-control" value="My Admin Panel">
				</div>
				<div class="mb-3 form-check">
					<input type="checkbox" class="form-check-input" id="maintenance">
					<label class="form-check-label" for="maintenance">Maintenance Mode</label>
				</div>
				<button type="submit" class="btn btn-primary">Save Settings</button>
			</form>
		</div>
	</div>
{% endblock %}
