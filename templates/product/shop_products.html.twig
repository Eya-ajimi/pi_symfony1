{% extends 'base.html.twig' %}

{% block title %}Products for Shop{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/product.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
{% endblock %}

{% block content %}
    <div class="shop-container">
        <!-- Simplified Filter Section -->
        <div class="filter-section">
            <h2><i class="fas fa-filter"></i> Filters</h2>
            
            <!-- Name Search Filter -->
            <div class="filter-group">
                <h3><i class="fas fa-search"></i> Search by Name</h3>
                <input type="text" class="search-input" placeholder="Product name...">
            </div>
            
            <!-- Price Filter -->
            <div class="filter-group">
                <h3><i class="fas fa-dollar-sign"></i> Price Range</h3>
                <div class="price-inputs">
                    <input type="number" class="min-price" placeholder="Min" min="0">
                    <span>to</span>
                    <input type="number" class="max-price" placeholder="Max" min="0">
                </div>
            </div>
            
            <!-- Promotion Filter -->
            <div class="filter-group">
                <h3><i class="fas fa-tag"></i> Promotions</h3>
                <div class="promotion-options">
                    <label>
                        <input type="checkbox" name="promotion" value="discounted">
                        Discounted Items
                    </label>
                </div>
            </div>
            
            <button class="filter-reset">
                <i class="fas fa-sync-alt"></i> Reset Filters
            </button>
        </div>
        
        <!-- Products Grid -->
        <div class="products-grid">
            {% if products is not empty %}
                {% for product in products %}
                    <div class="product-card">
                        <div class="image-container">
                            {% if product.imageUrl %}
                                <img src="{{ asset('logo/hoodie.jpg') }}" alt="{{ product.nom }}" loading="lazy">
                            {% else %}
                                <div class="no-image-icon">
                                    <i class="fas fa-box-open"></i>
                                </div>
                            {% endif %}
                            
                            <button class="wishlist-btn">
                                <i class="far fa-heart"></i>
                            </button>
                            
                            {% if product.promotionId %}
                         
                                <div class="discount-badge">20% </div>
                            
                            {% endif %}
                        </div>
                        
                        <div class="card-content">
                            <h3 class="product-name">{{ product.nom }}</h3>
                            
                            {% if product.description %}
                                <p class="product-description">{{ product.description }}</p>
                            {% endif %}
                            
                            <div class="product-price">
                                ${{ product.prix|number_format(2) }}
                            </div>
                            
                            {% if product.stock is defined %}
                                <div class="product-stock">
                                    <i class="fas fa-cubes"></i> {{ product.stock }} available
                                </div>
                            {% endif %}
                            
                            <button class="add-to-cart">
                                <i class="fas fa-shopping-cart"></i>
                                <a style="text-decortion:none"  class="line-cart" href="{{ path('app_add_item', {
                                        'idProduit': product.id,
                                        'shopId' : shopId
                                    }) }}">Add to Cart</a> 
                            </button>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="no-products">
                    <i class="fas fa-box-open fa-3x"></i>
                    <h3>No products available</h3>
                    <p>There are currently no products matching your criteria.</p>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}