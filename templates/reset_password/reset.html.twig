{# templates/reset_password/reset.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block content %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title text-center">Réinitialiser votre mot de passe</h3>
                </div>
                <div class="card-body">
                    {{ form_start(resetForm) }}
                        {{ form_row(resetForm.plainPassword) }}
                        
                        <div class="d-grid gap-2 mt-4">
                            <button class="btn btn-primary" type="submit">
                                <i class="fas fa-save me-2"></i>Enregistrer le nouveau mot de passe
                            </button>
                        </div>
                    {{ form_end(resetForm) }}
                </div>
            </div>
        </div>
    </div>




    
</div>
{% endblock %}