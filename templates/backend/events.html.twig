{% extends 'backend/base.html.twig' %}

{% block title %}Events Management{% endblock %}

{% block content %}
<div class="container-fluid" style="padding:50px">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Shops Events Overview</h6>
        </div>
        <style>
        .card i {
        font-size: 18px;
            color: #ffffff;
            
        }
        </style>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="bg-gradient-primary text-white">
                        <tr>
                            <th>Shop ID</th>
                            <th>Shop Name</th>
                            <th>Email</th>
                            <th>Total Events</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for shopData in shops %}
                        <tr>
                            <td>{{ shopData.shop.id }}</td>
                            <td>{{ shopData.shop.getFullName() }}</td>
                            <td>{{ shopData.shop.email }}</td>
                            <td>{{ shopData.eventCount }}</td>
                            <td>
                                <a href="{{ path('app_eventsadmin_statistics', {'id': shopData.shop.id}) }}" 
                                   class="btn btn-info btn-circle btn-sm">
                                    <i class="fas fa-chart-line"></i> Statistics
                                </a>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="5" class="text-center">No shops found</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('backend/vendor/datatables/dataTables.bootstrap4.min.css') }}" rel="stylesheet">
<style>
    .card {
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }
    .bg-gradient-primary {
        background: linear-gradient(87deg, #5e72e4 0, #825ee4 100%) !important;
    }
    .btn-circle {
        width: 30px;
        height: 30px;
        padding: 6px 0;
        border-radius: 15px;
        text-align: center;
    }
    .table th {
        border-top: none;
    }
</style>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('backend/vendor/datatables/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('backend/vendor/datatables/dataTables.bootstrap4.min.js') }}"></script>
<script>
    $(document).ready(function() {
        $('#dataTable').DataTable({
            "order": [[0, "asc"]],
            "language": {
                "emptyTable": "No shops available",
                "info": "Showing _START_ to _END_ of _TOTAL_ shops",
                "infoEmpty": "Showing 0 to 0 of 0 shops",
                "infoFiltered": "(filtered from _MAX_ total shops)",
                "lengthMenu": "Show _MENU_ shops",
                "search": "Search:",
                "zeroRecords": "No matching shops found"
            }
        });
    });
</script>
{% endblock %}