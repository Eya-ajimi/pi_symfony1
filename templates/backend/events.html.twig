{% extends 'backend/base.html.twig' %}

{% block title %}Events Management{% endblock %}

{% block content %}
<div class="container-fluid py-5">
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <h2 class="text-dark font-weight-bold mb-0">Shops Events Overview</h2>
          <p class="text-muted mb-0">Manage and track events across all shops</p>
        </div>
        <div class="d-flex">
          <div class="dropdown mr-2">
            <button class="btn btn-light dropdown-toggle shadow-sm" type="button" id="exportDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-download fa-sm text-primary"></i> Export
            </button>
            <div class="dropdown-menu dropdown-menu-right shadow" aria-labelledby="exportDropdown">
              <a class="dropdown-item" href="#"><i class="far fa-file-pdf mr-2 text-danger"></i>PDF</a>
              <a class="dropdown-item" href="#"><i class="far fa-file-excel mr-2 text-success"></i>Excel</a>
              <a class="dropdown-item" href="#"><i class="far fa-file-csv mr-2 text-primary"></i>CSV</a>
            </div>
          </div>
          <button class="btn btn-primary shadow-sm">
            <i class="fas fa-sync-alt fa-sm"></i> Refresh Data
          </button>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-primary shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Shops</div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">{{ shops|length }}</div>
            </div>
            <div class="col-auto">
              <i class="fas fa-store fa-2x text-primary opacity-50"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-success shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Total Events</div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">
                {% set totalEvents = 0 %}
                {% for shopData in shops %}
                  {% set totalEvents = totalEvents + shopData.eventCount %}
                {% endfor %}
                {{ totalEvents }}
              </div>
            </div>
            <div class="col-auto">
              <i class="fas fa-calendar-day fa-2x text-success opacity-50"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-info shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Avg Events Per Shop</div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">
                {% set totalEvents = 0 %}
                {% for shopData in shops %}
                  {% set totalEvents = totalEvents + shopData.eventCount %}
                {% endfor %}
                {% if shops|length > 0 %}
                  {{ (totalEvents / shops|length)|round(1) }}
                {% else %}
                  0
                {% endif %}
              </div>
            </div>
            <div class="col-auto">
              <i class="fas fa-chart-bar fa-2x text-info opacity-50"></i>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
      <div class="card border-left-warning shadow h-100 py-2">
        <div class="card-body">
          <div class="row no-gutters align-items-center">
            <div class="col mr-2">
              <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Top Shop Events</div>
              <div class="h5 mb-0 font-weight-bold text-gray-800">
                {% set maxEvents = 0 %}
                {% for shopData in shops %}
                  {% if shopData.eventCount > maxEvents %}
                    {% set maxEvents = shopData.eventCount %}
                  {% endif %}
                {% endfor %}
                {{ maxEvents }}
              </div>
            </div>
            <div class="col-auto">
              <i class="fas fa-trophy fa-2x text-warning opacity-50"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <ul class="nav nav-tabs card-header-tabs">
        <li class="nav-item">
          <a class="nav-link active font-weight-bold" href="#">All Shops</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-muted" href="#">Active Events</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-muted" href="#">Upcoming Events</a>
        </li>
      </ul>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr class="bg-light">
              <th class="border-0 rounded-left">Shop ID</th>
              <th class="border-0">Shop Name</th>
              <th class="border-0">Email</th>
              <th class="border-0">Total Events</th>
              <th class="border-0 rounded-right text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
          {% for shopData in shops %}
            <tr>
              <td class="align-middle font-weight-bold">{{ shopData.shop.id }}</td>
              <td class="align-middle">
                <div class="d-flex align-items-center">
                  <div class="shop-avatar bg-primary text-white rounded-circle mr-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                    {{ shopData.shop.getFullName()|slice(0, 1)|upper }}
                  </div>
                  <div>
                    <div class="font-weight-bold">{{ shopData.shop.getFullName() }}</div>
                    <small class="text-muted">ID: {{ shopData.shop.id }}</small>
                  </div>
                </div>
              </td>
              <td class="align-middle">
                <a href="mailto:{{ shopData.shop.email }}" class="text-decoration-none">
                  {{ shopData.shop.email }}
                </a>
              </td>
              <td class="align-middle">
                <div class="d-flex align-items-center">
                  <div class="progress" style="width: 100px; height: 6px;">
                    {% set percentage = (shopData.eventCount / 100) * 100 %}
                    {% if percentage > 100 %}{% set percentage = 100 %}{% endif %}
                    <div class="progress-bar bg-primary" role="progressbar" style="width: {{ percentage }}%"></div>
                  </div>
                  <span class="ml-2 font-weight-bold">{{ shopData.eventCount }}</span>
                </div>
              </td>
              <td class="align-middle">
                <div class="d-flex justify-content-center">
                  <a href="{{ path('app_eventsadmin_statistics', {'id': shopData.shop.id}) }}" class="btn btn-sm mr-2" data-toggle="tooltip" title="View Statistics">
                    <i class="fas fa-chart-line text-info"></i>
                  </a>
                  <a href="#" class="btn btn-sm mr-2" data-toggle="tooltip" title="View Events">
                    <i class="fas fa-calendar-day text-primary"></i>
                  </a>
                  <div class="dropdown">
                    <button class="btn btn-sm" type="button" data-toggle="dropdown">
                      <i class="fas fa-ellipsis-v text-secondary"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right shadow">
                      <a class="dropdown-item" href="#">
                        <i class="fas fa-envelope mr-2 text-primary"></i> Contact Shop
                      </a>
                      <a class="dropdown-item" href="#">
                        <i class="fas fa-file-export mr-2 text-success"></i> Export Events
                      </a>
                      <div class="dropdown-divider"></div>
                      <a class="dropdown-item text-danger" href="#">
                        <i class="fas fa-ban mr-2"></i> Disable Events
                      </a>
                    </div>
                  </div>
                </div>
              </td>
            </tr>
          {% else %}
            <tr>
              <td colspan="5" class="text-center py-5">
                <div class="empty-state">
                  <i class="fas fa-store-slash fa-3x text-muted mb-3"></i>
                  <h5>No shops found</h5>
                  <p class="text-muted">No shops are currently available in the system.</p>
                </div>
              </td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('assets/css2/css/styles.min.css') }}">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link href="{{ asset('backend/vendor/datatables/dataTables.bootstrap4.min.css') }}" rel="stylesheet">
<style>
  /* General Styling */
  body {
    background-color: #f8f9fc;
  }
  
  /* Card Styling */
  .card {
    border: none;
    border-radius: 0.75rem;
    box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1) !important;
    transition: transform 0.2s, box-shadow 0.2s;
  }
  
  .card:hover {
    transform: translateY(-3px);
    box-shadow: 0 0.5rem 2rem 0 rgba(58, 59, 69, 0.15) !important;
  }
  
  /* Card Header Tabs */
  .card-header-tabs .nav-link {
    border-radius: 0.5rem 0.5rem 0 0;
    padding: 0.75rem 1rem;
    transition: all 0.2s;
  }
  
  .card-header-tabs .nav-link.active {
    background-color: white;
    border-bottom-color: white;
  }
  
  /* Status Indicators */
  .border-left-primary {
    border-left: 0.25rem solid #4e73df !important;
  }
  
  .border-left-success {
    border-left: 0.25rem solid #1cc88a !important;
  }
  
  .border-left-info {
    border-left: 0.25rem solid #36b9cc !important;
  }
  
  .border-left-warning {
    border-left: 0.25rem solid #f6c23e !important;
  }
  
  /* Table Styling */
  .table {
    margin-bottom: 0;
  }
  
  .table td, .table th {
    vertical-align: middle;
    padding: 1rem;
  }
  
  .table th {
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 1px;
    color: #5a5c69;
  }
  
  .table tr {
    border-bottom: 1px solid #f1f1f1;
    transition: background-color 0.2s;
  }
  
  .table tbody tr:hover {
    background-color: rgba(78, 115, 223, 0.05);
  }
  
  /* Button Styling */
  .btn {
    border-radius: 10px;
    padding: 0.375rem 1rem;
    box-shadow: 0 0.125rem 0.25rem rgba(58, 59, 69, 0.15);
    transition: all 0.2s;
  }
  
  .btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 0.25rem 0.5rem rgba(58, 59, 69, 0.2);
  }
  
  .btn-sm {
    padding: 0.25rem 0.5rem;
    border-radius: 0.5rem;
  }
  
  /* Empty State */
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 2rem;
  }
  
  /* Progress Bar */
  .progress {
    background-color: #eaecf4;
    border-radius: 10px;
    overflow: hidden;
  }
  
  .progress-bar {
    border-radius: 10px;
    transition: width 1s ease;
  }
  
  /* Opacity for icons */
  .opacity-50 {
    opacity: 0.5;
  }
  
  /* DataTable customization */
  .dataTables_wrapper .dataTables_length, 
  .dataTables_wrapper .dataTables_filter {
    padding: 1rem;
  }
  
  .dataTables_wrapper .dataTables_info,
  .dataTables_wrapper .dataTables_paginate {
    padding: 1rem;
  }
  
  .dataTables_wrapper .dataTables_filter input {
    border-radius: 10px;
    border: 1px solid #d1d3e2;
    padding: 0.375rem 0.75rem;
  }
  
  .dataTables_wrapper .dataTables_length select {
    border-radius: 10px;
    border: 1px solid #d1d3e2;
    padding: 0.375rem 0.75rem;
  }
  
  /* Shop avatar styles */
  .shop-avatar {
    transition: transform 0.2s;
  }
  
  tr:hover .shop-avatar {
    transform: scale(1.1);
  }
  
  /* Tooltip customization */
  .tooltip .tooltip-inner {
    background-color: #4e73df;
    border-radius: 10px;
  }
</style>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('backend/vendor/datatables/jquery.dataTables.min.js') }}"></script>
<script src="{{ asset('backend/vendor/datatables/dataTables.bootstrap4.min.js') }}"></script>
<script>
  $(document).ready(function() {
    // Initialize tooltips
    $('[data-toggle="tooltip"]').tooltip();
    
    // Initialize DataTable with improved configuration
    $('#dataTable').DataTable({
      "order": [[3, "desc"]], // Order by event count (descending)
      "language": {
        "emptyTable": "No shops available",
        "info": "Showing _START_ to _END_ of _TOTAL_ shops",
        "infoEmpty": "Showing 0 to 0 of 0 shops",
        "infoFiltered": "(filtered from _MAX_ total shops)",
        "lengthMenu": "Show _MENU_ shops per page",
        "search": "<i class='fas fa-search'></i> Search:",
        "zeroRecords": "No matching shops found",
        "paginate": {
          "first": "<i class='fas fa-angle-double-left'></i>",
          "last": "<i class='fas fa-angle-double-right'></i>",
          "next": "<i class='fas fa-angle-right'></i>",
          "previous": "<i class='fas fa-angle-left'></i>"
        }
      },
      "dom": "<'row'<'col-sm-12 col-md-6'l><'col-sm-12 col-md-6'f>>" +
             "<'row'<'col-sm-12'tr>>" +
             "<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7'p>>",
      "pageLength": 10,
      "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
      "drawCallback": function() {
        // Reinitialize tooltips after table redraw
        $('[data-toggle="tooltip"]').tooltip();
        
        // Add animation to newly displayed rows
        $('.table tbody tr').each(function(index) {
          $(this).css('opacity', '0');
          $(this).animate({
            opacity: 1
          }, 200 * (index + 1));
        });
      }
    });
    
    // Add animation to stat cards on page load
    $('.card').each(function(index) {
      $(this).css('opacity', '0');
      $(this).css('transform', 'translateY(20px)');
      $(this).animate({
        opacity: 1,
        transform: 'translateY(0)'
      }, 300 * (index + 1));
    });
  });
</script>
{% endblock %}