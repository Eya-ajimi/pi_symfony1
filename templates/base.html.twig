    <style>
        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            padding-top: 100px;
        }

      

        .logo {
            display: flex;
            align-items: center;
        }

        .logo img {
            height: auto;
            max-height: 100px;
            object-fit: contain;
        }

        .logo:hover img {
            transform: rotate(-5deg);
        }

        .search-bar {
            display: flex;
            align-items: center;
            border: 1px solid #ccc;
            border-radius: 50px;
            padding: 8px 15px;
            background: rgb(255, 255, 255);
            width: 250px;
            height: 20px;
            transition: all 0.3s ease;
        }

        .search-bar:focus-within {
            border-color: rgb(247, 247, 247);
            box-shadow: 0 0 0 3px rgba(230, 226, 224, 0.2);
        }

        .search-bar input {
            border: none;
            outline: none;
            background: rgb(255, 255, 255);
            padding: 5px;
            font-size: 14px;
            width: 200px;
        }

        .search-bar button {
            background: none;
            border: none;
            cursor: pointer;
            font-size: 16px;
            color: #555;
            transition: all 0.3s ease;
        }

        .search-bar button:hover {
            color: #f4a261;
            transform: scale(1.1);
        }

        .nav-links {
            display: flex;
            gap: 30px;
        }

        .nav-links a {
            position: relative;
            text-decoration: none;
            color: #333;
            font-weight: 500;
            font-size: 16px;
            padding: 8px 12px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .nav-links a::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 2px;
            background-color: #f4a261;
            transition: width 0.3s ease;
        }

        .nav-links a:hover {
            color: #f4a261;
        }

        .nav-links a:hover::after,
        .nav-links a.active::after {
            width: 80%;
        }

        .nav-links a.active {
            color: #f4a261;
            font-weight: 600;
        }

        .user-icons {
            display: flex;
            align-items: center;
            gap: 30px;
            margin-right: 80px;
        }

        .user-icons span {
            position: relative;
            font-size: 20px;
            cursor: pointer;
            color: #333;
            transition: all 0.3s ease;
            padding: 5px;
        }

        .user-icons span:hover {
            color: #f4a261;
            transform: translateY(-3px);
        }

        .user-icons .notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background-color: #2a9d8f;
            color: white;
            border-radius: 50%;
            width: 18px;
            height: 18px;
            font-size: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
        }

        .icon-with-badge {
    
    display: inline-block;
    font-size: 10px;
    color: #333;
}

.custom-badge {
    
    top: -5px;
    right: -10px;
    background-color:rgb(243, 161, 80);
    color: white;
    border-radius: 100%;
    padding: 2px 6px;
    font-size: 2px;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 4px;
    height: 4px;
}

/* dropdown*/
/* navbar glassy effect */
.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background:  #d7ebff;
    backdrop-filter: blur(15px);
    padding: 10px 40px;
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    z-index: 1000;
    height: 60px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.15);
}

/* dropdown repositioning */
.user-dropdown-wrapper {
    position: relative;
}

.user-dropdown {
    display: none;
    position: absolute;
    top: 35px;
    right: -30px; /* repositioned closer */
    background: #d7ebff;
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 2px;
    box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.15);
    z-index: 999;
    min-width: 50px;
    padding: 10px 0;
    transition: all 0.3s ease;
}

/* text color & hover */
.user-dropdown a {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 10px 18px;
    color:rgb(68, 68, 69);
    text-decoration: none;
    transition: background-color 0.3s ease;
    font-size: 15px;
    font-weight: 500;
}

.user-dropdown a:hover {
    background-color: rgba(125, 122, 122, 0.2);
    color: #f4a261;
}

.user-dropdown-wrapper:hover .user-dropdown {
    display: block;
}


.rounded-circle {
    border-radius: 50%;
    object-fit: cover; /* important pour que l'image reste bien proportionn√©e */
}


    </style>
</head>
