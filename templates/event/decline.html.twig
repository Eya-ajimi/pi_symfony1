{% extends 'base.html.twig' %}

{% block title %}Decline Participation - InnoMall{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/events.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .decline-container {
            max-width: 950px;
            margin: 4rem auto;
            background: linear-gradient(to right, #ffffff, #f9f9f9);
            border-radius: 20px;
            box-shadow: 0 12px 35px rgba(0, 0, 0, 0.08);
            overflow: hidden;
            position: relative;
            padding-bottom: 3rem;
        }
        
        .decline-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 8px;
            background: linear-gradient(to right, #f4a261, #e76f51);
        }
        
        .decline-header {
            padding: 3rem 2.5rem 2rem;
            text-align: center;
            position: relative;
        }
        
        .decline-header h1 {
            font-size: 2.4rem;
            color: #2a2a2a;
            margin-bottom: 0.75rem;
            font-weight: 600;
        }
        
        .decline-subtitle {
            color: #666;
            font-size: 1.1rem;
            margin-bottom: 1rem;
        }
        
        .decline-content {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 0 3rem;
        }
        
        .event-details {
            width: 100%;
            padding: 1rem 1.5rem 2rem;
            margin-bottom: 2.5rem;
            border-bottom: 1px dashed #e0e0e0;
        }
        
        .event-card {
            width: 100%;
            padding: 1rem 2rem 2rem;
        }
        
        .event-organizer {
            font-size: 1.5rem;
            font-weight: 600;
            color: #333;
            margin-bottom: 1rem;
        }
        
        .event-description {
            color: #555;
            line-height: 1.7;
            margin-bottom: 2rem;
            font-size: 1.05rem;
            padding: 0 1rem;
        }
        
        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
            gap: 1.31rem;
            margin: 2.5rem 0;
            padding: 0 1rem;
        }
        
        .info-item {
            background: rgba(244, 162, 97, 0.08);
            padding: 1.5rem;
            border-radius: 14px;
            display: flex;
            align-items: center;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.03);
        }
        
        .info-icon {
            width: 48px;
            height: 48px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f4a261;
            color: white;
            border-radius: 50%;
            margin-right: 1.25rem;
            flex-shrink: 0;
            font-size: 1.1rem;
        }
        
        .info-content {
            flex-grow: 1;
        }
        
        .info-label {
            font-size: 0.85rem;
            text-transform: uppercase;
            color: #888;
            letter-spacing: 0.5px;
            margin-bottom: 0.3rem;
        }
        
        .info-value {
            font-weight: 600;
            color: #333;
            font-size: 1.1rem;
        }
        
        .decline-form {
            width: 100%;
            max-width: 550px;
            margin: 0 auto 2rem;
            padding: 2.5rem;
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(10px);
            border-radius: 14px;
            border: 1px solid #f0f0f0;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.04);
        }
        
        .form-title {
            text-align: center;
            margin-bottom: 2rem;
            font-size: 1.4rem;
            color: #333;
        }
        
        .form-group {
            margin-bottom: 2.5rem;
        }
        
        .form-label {
            display: block;
            margin-bottom: 1rem;
            font-weight: 500;
            color: #444;
            font-size: 1.05rem;
        }
        
        .form-control {
            width: 100%;
            border-radius: 12px;
            padding: 1rem 1.2rem;
            border: 1px solid #ddd;
            transition: all 0.3s ease;
            font-size: 1.2rem;
            text-align: center;
            font-weight: 600;
            color: #333;
        }
        
        .form-control:focus {
            border-color: #f4a261;
            box-shadow: 0 0 0 4px rgba(244, 162, 97, 0.2);
            outline: none;
        }
        
        .btn-wrapper {
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            margin-top: 2.5rem;
        }
        
        .btn {
            padding: 1rem 2.5rem;
            border-radius: 12px;
            font-weight: 600;
            transition: all 0.3s ease;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border: none;
            font-size: 1.05rem;
        }
        
        .btn i {
            margin-right: 0.75rem;
        }
        
        .btn-primary {
            background: #f4a261;
            color: white;
        }
        
        .btn-primary:hover {
            background: #e88c4a;
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(244, 162, 97, 0.3);
        }
        
        .btn-secondary {
            background: #f0f0f0;
            color: #555;
        }
        
        .btn-secondary:hover {
            background: #e0e0e0;
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
        }
        
        @media (max-width: 768px) {
            .decline-container {
                margin: 2rem 1.25rem;
                padding-bottom: 2rem;
            }
            
            .decline-content {
                padding: 0 1.5rem;
            }
            
            .info-grid {
                grid-template-columns: 1fr;
                gap: 1.5rem;
            }
            
            .btn-wrapper {
                flex-direction: column;
            }
            
            .btn {
                width: 100%;
            }
        }
    </style>
{% endblock %}

{% block content %}
<div class="decline-container">
    <div class="decline-header">
        <h1>Decline Participation</h1>
        <p class="decline-subtitle">Modify your booking for this event</p>
    </div>
    
    <div class="decline-content">
        <div class="event-details">
            <h2 class="event-organizer">{{ event.organisateur.nom }}</h2>
            <p class="event-description">{{ event.description }}</p>
            
            <div class="info-grid">
                <div class="info-item">
                    <div class="info-icon">
                        <i class="far fa-calendar-alt"></i>
                    </div>
                    <div class="info-content">
                        <div class="info-label">Event Date</div>
                        <div class="info-value">{{ event.dateDebut|date('d M Y') }} / {{ event.dateFin|date('d M Y') }}</div>
                    </div>
                </div>
                
                <div class="info-item">
                    <div class="info-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    </div>
                    <div class="info-content">
                        <div class="info-label">Location</div>
                        <div class="info-value">{{ event.emplacement }}</div>
                    </div>
                </div>
                
                <div class="info-item">
                    <div class="info-icon">
                        <i class="fas fa-ticket-alt"></i>
                    </div>
                    <div class="info-content">
                        <div class="info-label">Your Reservation</div>
                        <div class="info-value">{{ participation.places }} places</div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="decline-form">
            <h3 class="form-title">How many places would you like to decline?</h3>
            
            <form method="post">
                <div class="form-group">
                    <label for="places" class="form-label">Number of places (max {{ participation.places }}):</label>
                    <input type="number" id="places" name="places" min="1" max="{{ participation.places }}" 
                           value="1" class="form-control" required>
                </div>
                
                <div class="btn-wrapper">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-check"></i> Confirm Decline
                    </button>
                    
                    <a href="{{ path('app_events') }}" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}