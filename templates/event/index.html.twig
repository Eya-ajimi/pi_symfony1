{# templates/event/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Events - InnoMall{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/events.css') }}">
{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="event-search-form">
        <form method="get" action="{{ path('app_events') }}">
            <input 
                type="date" 
                name="date" 
                value="{{ app.request.query.get('date') }}"
                class="event-date-input"
            >
            <button type="submit" class="event-search-button">
                Search
            </button>
            {% if app.request.query.get('date') %}
                <a href="{{ path('app_events') }}" class="clear-btn">
                    Clear
                </a>
            {% endif %}
        </form>
    </div>

    <div class="events-container">
        {% for event in events %}
            <div class="event-card">
                <h3 class="event-organizer">
                    {{ event.organisateur.nom }} {{ event.organisateur.prenom }}
                </h3>
                <p class="event-description">{{ event.description }}</p>
                
                <div class="event-meta">
                    <i class="far fa-calendar-alt"></i>
                    <span>{{ event.dateDebut }} to {{ event.dateFin }}</span>
                </div>
                
                <div class="event-meta">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>{{ event.emplacement }}</span>
                </div>

                {% if is_granted('ROLE_CLIENT') %}
                    <a 
                        href="{{ path('app_event_participate', {id: event.id}) }}" 
                        class="event-button"
                    >
                        Participate
                    </a>
                {% endif %}
            </div>
        {% else %}
            <div class="col-span-3 text-center py-8">
                <p class="text-gray-500">No events found.</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}