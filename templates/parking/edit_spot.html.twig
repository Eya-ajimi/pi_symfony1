{# templates/parking/edit_spot.html.twig #}
{% extends 'backend/base.html.twig' %}

{% block title %}Edit Parking Spot | Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/parking.css') }}">
    <link rel="stylesheet" href="{{ asset('css/adminpark.css') }}">
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="card-title">
                    <i class="fas fa-edit me-2"></i>Edit Parking Spot: {{ spot.zone }}{{ spot.id }}
                </h4>
                <a href="{{ path('app_parking_spots') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Spots
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            {{ form_label(form.zone, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.zone, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.zone) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.floor, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.floor, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.floor) }}
                        </div>
                        
                        <div class="mb-3">
                            {{ form_label(form.statut, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.statut, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.statut) }}
                        </div>
                        
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}