{# templates/parking/edit_spot.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Edit Parking Spot | Admin{% endblock %}

{% block stylesheets %}
  
    <link rel="stylesheet" href="{{ asset('css/parking.css') }}">
    <link rel="stylesheet" href="{{ asset('css/adminpark.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}

{% block content %}
    <div class="admin-dashboard">
        {# Sidebar - same structure as admin.html.twig #}
        <div class="admin-sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <i class="fas fa-parking"></i>
                    <span>Smart Parking</span>
                </div>
            </div>
            
            <nav class="sidebar-nav">
                <ul>
                    <li class="nav-item active">
                        <a href="{{ path('app_parking_admin') }}">
                            <i class="fas fa-parking"></i>
                            <span>Parking Spots</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <i class="fas fa-calendar-alt"></i>
                        <span>Reservations</span>
                    </li>
                    <li class="nav-item">
                        <i class="fas fa-chart-pie"></i>
                        <span>Statistics</span>
                    </li>
                </ul>
            </nav>
        </div>

        {# Main Content Area #}
        <div class="admin-content">
            <div class="content-header">
                <h1><i class="fas fa-user-shield"></i> Edit Parking Spot</h1>
                <div class="user-actions">
                    <div class="admin-profile">
                        <span>Admin</span>
                        <i class="fas fa-user-circle"></i>
                    </div>
                </div>
            </div>

            <div class="content-body">
                <div class="panel-card">
                    <div class="card-header">
                        <h3><i class="fas fa-edit"></i> Edit Spot: {{ spot.zone }}{{ spot.id }}</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="form-group">
                                {{ form_label(form.zone) }}
                                {{ form_widget(form.zone) }}
                                {{ form_errors(form.zone) }}
                            </div>
                            
                            <div class="form-group">
                                {{ form_label(form.floor) }}
                                {{ form_widget(form.floor) }}
                                {{ form_errors(form.floor) }}
                            </div>
                            
                            <div class="form-group">
                                {{ form_label(form.statut) }}
                                {{ form_widget(form.statut) }}
                                {{ form_errors(form.statut) }}
                            </div>
                            
                            <div class="form-actions">
                                <a href="{{ path('app_parking_admin') }}" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Cancel
                                </a>
                                {{ form_widget(form.save) }}
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}