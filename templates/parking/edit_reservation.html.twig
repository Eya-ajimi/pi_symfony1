{# templates/parking/edit_reservation.html.twig #}
{% extends 'backend/base.html.twig' %}

{% block title %}Edit Reservation | Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/parking.css') }}">
    <link rel="stylesheet" href="{{ asset('css/adminpark.css') }}">
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="card-title">
                    <i class="fas fa-edit me-2"></i>Edit Reservation #{{ reservation.idReservation }}
                </h4>
                <a href="{{ path('app_parking_reservations') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Reservations
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <form method="post" action="{{ path('admin_reservation_update', {'id': reservation.idReservation}) }}">
                        <div class="mb-3">
                            <label for="start_time" class="form-label">Start Time</label>
                            <input type="datetime-local" id="start_time" name="start_time" 
                                   class="form-control"
                                   value="{{ reservation.dateReservation|date('Y-m-d\\TH:i') }}" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="end_time" class="form-label">End Time</label>
                            <input type="datetime-local" id="end_time" name="end_time" 
                                   class="form-control"
                                   value="{{ reservation.dateExpiration|date('Y-m-d\\TH:i') }}" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="status" class="form-label">Status</label>
                            <select id="status" name="status" class="form-control" required>
                                <option value="active" {{ reservation.statut == 'active' ? 'selected' : '' }}>Active</option>
                                <option value="expired" {{ reservation.statut == 'expired' ? 'selected' : '' }}>Expired</option>
                                <option value="cancelled" {{ reservation.statut == 'cancelled' ? 'selected' : '' }}>Cancelled</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="vehicle_type" class="form-label">Vehicle Type</label>
                            <select id="vehicle_type" name="vehicle_type" class="form-control" required>
                                <option value="Motorcycle" {{ reservation.vehicleType == 'Motorcycle' ? 'selected' : '' }}>Motorcycle</option>
                                <option value="Compact" {{ reservation.vehicleType == 'Compact' ? 'selected' : '' }}>Compact</option>
                                <option value="SUV" {{ reservation.vehicleType == 'SUV' ? 'selected' : '' }}>SUV</option>
                                <option value="Van" {{ reservation.vehicleType == 'Van' ? 'selected' : '' }}>Van</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="price" class="form-label">Price (TND)</label>
                            <input type="number" id="price" name="price" step="0.01" 
                                   class="form-control"
                                   value="{{ reservation.price }}" required>
                        </div>
                        
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}