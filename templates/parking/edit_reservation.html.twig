{# templates/parking/edit_reservation.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Edit Reservation | Admin{% endblock %}

{% block stylesheets %}
    
    <link rel="stylesheet" href="{{ asset('css/parking.css') }}">
    <link rel="stylesheet" href="{{ asset('css/adminpark.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}

{% block content %}
    <div class="admin-dashboard">
        {# Sidebar #}
        <div class="admin-sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <i class="fas fa-parking"></i>
                    <span>Smart Parking</span>
                </div>
            </div>
            
            <nav class="sidebar-nav">
                <ul>
                    <li class="nav-item">
                        <a href="{{ path('app_parking_admin') }}">
                            <i class="fas fa-parking"></i>
                            <span>Parking Spots</span>
                        </a>
                    </li>
                    <li class="nav-item active">
                        <i class="fas fa-calendar-alt"></i>
                        <span>Reservations</span>
                    </li>
                    <li class="nav-item">
                        <i class="fas fa-chart-pie"></i>
                        <span>Statistics</span>
                    </li>
                </ul>
            </nav>
        </div>

        {# Main Content Area #}
        <div class="admin-content">
            <div class="content-header">
                <h1><i class="fas fa-user-shield"></i> Edit Reservation</h1>
                <div class="user-actions">
                    <div class="admin-profile">
                        <span>Admin</span>
                        <i class="fas fa-user-circle"></i>
                    </div>
                </div>
            </div>

            <div class="content-body">
                <div class="panel-card">
                    <div class="card-header">
                        <h3><i class="fas fa-edit"></i> Edit Reservation: #{{ reservation.idReservation }}</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" action="{{ path('admin_reservation_update', {'id': reservation.idReservation}) }}">
                            <div class="form-group">
                                <label for="start_time">Start Time</label>
                                <input type="datetime-local" id="start_time" name="start_time" 
                                       value="{{ reservation.dateReservation|date('Y-m-d\\TH:i') }}" required>
                            </div>
                            
                            <div class="form-group">
                                <label for="end_time">End Time</label>
                                <input type="datetime-local" id="end_time" name="end_time" 
                                       value="{{ reservation.dateExpiration|date('Y-m-d\\TH:i') }}" required>
                            </div>
                            
                            <div class="form-group">
                                <label for="status">Status</label>
                                <select id="status" name="status" required>
                                    <option value="active" {{ reservation.statut == 'active' ? 'selected' : '' }}>Active</option>
                                    <option value="expired" {{ reservation.statut == 'expired' ? 'selected' : '' }}>Expired</option>
                                    <option value="cancelled" {{ reservation.statut == 'cancelled' ? 'selected' : '' }}>Cancelled</option>
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <label for="vehicle_type">Vehicle Type</label>
                                <select id="vehicle_type" name="vehicle_type" required>
                                    <option value="Motorcycle" {{ reservation.vehicleType == 'Motorcycle' ? 'selected' : '' }}>Motorcycle</option>
                                    <option value="Compact" {{ reservation.vehicleType == 'Compact' ? 'selected' : '' }}>Compact</option>
                                    <option value="SUV" {{ reservation.vehicleType == 'SUV' ? 'selected' : '' }}>SUV</option>
                                    <option value="Van" {{ reservation.vehicleType == 'Van' ? 'selected' : '' }}>Van</option>
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <label for="price">Price (TND)</label>
                                <input type="number" id="price" name="price" step="0.01" 
                                       value="{{ reservation.price }}" required>
                            </div>
                            
                            <div class="form-actions">
                                <a href="{{ path('app_parking_admin') }}" class="btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Cancel
                                </a>
                                <button type="submit" class="btn-primary">
                                    <i class="fas fa-save"></i> Save Changes
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}