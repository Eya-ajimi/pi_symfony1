{% extends 'base.html.twig' %}

{% block title %}Vos produits favoris et recommandations{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <link rel="stylesheet" href="{{ asset('css/product.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    <style>
        :root {
            --primary-color: #2b93c3;
            --secondary-color: #e94057;
            --dark-color: #151c2c;
            --light-color: #f8f9fa;
            --gray-color: #6c757d;
            --success-color: #4cc9f0;
            --accent-color: #ffc107;
            --box-shadow: 0 8px 20px rgba(0,0,0,0.08);
            --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
            --card-radius: 14px;
            --input-radius: 8px;
        }

        body {
            background-color: #f5f8fb;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Animation keyframes */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }

        /* Ajout d'un effet de défilement fluide */
        html {
            scroll-behavior: smooth;
        }

        /* Page header styles */
        .page-header {
            text-align: center;
            margin-bottom: 2.5rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            position: relative;
            animation: fadeIn 0.8s ease-out;
        }

        .page-header:after {
            content: "";
            position: absolute;
            bottom: -2px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
            border-radius: 3px;
        }

        .page-header h1 {
            font-size: 2.2rem;
            color: var(--dark-color);
            margin-bottom: 0.8rem;
            font-weight: 700;
            letter-spacing: -0.5px;
        }

        .page-header p {
            color: var(--gray-color);
            font-size: 1.05rem;
            max-width: 600px;
            margin: 0 auto;
        }

        .page-header i {
            color: var(--secondary-color);
            margin-right: 0.5rem;
        }

        /* Section headers */
        .section-title {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid rgba(43, 147, 195, 0.2);
            color: var(--dark-color);
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 0.8rem;
            position: sticky;
            top: 0;
            background: rgba(245, 248, 251, 0.95);
            padding-top: 1rem;
            z-index: 10;
            backdrop-filter: blur(5px);
        }

        .section-title i {
            color: var(--primary-color);
            background: rgba(43, 147, 195, 0.1);
            padding: 0.5rem;
            border-radius: 50%;
            font-size: 1.2rem;
        }

        .section-title .product-count {
            font-size: 0.9rem;
            background: rgba(43, 147, 195, 0.1);
            padding: 0.5rem 1rem;
            border-radius: 20px;
            color: var(--primary-color);
            font-weight: 600;
        }

        /* Empty section styling */
        .empty-section {
            background: white;
            border-radius: var(--card-radius);
            padding: 3.5rem 2rem;
            text-align: center;
            box-shadow: var(--box-shadow);
            margin-bottom: 2.5rem;
            position: relative;
            overflow: hidden;
        }

        .empty-section:before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
        }

        .empty-section i {
            font-size: 3rem;
            color: #e0e0e0;
            margin-bottom: 1.5rem;
            animation: pulse 2s infinite;
        }

        .empty-section h3 {
            font-size: 1.3rem;
            margin-bottom: 1rem;
            color: var(--dark-color);
        }

        .empty-section p {
            color: var(--gray-color);
            max-width: 500px;
            margin: 0 auto;
            font-size: 1rem;
            line-height: 1.6;
        }

        /* Recommendation info styling */
        .recommendation-info {
            background: linear-gradient(to right, rgba(43, 147, 195, 0.08), rgba(43, 147, 195, 0.02));
            border-left: 4px solid var(--primary-color);
            padding: 1rem 1.2rem;
            margin-bottom: 1.8rem;
            border-radius: 0 var(--card-radius) var(--card-radius) 0;
        }

        .recommendation-info p {
            color: var(--dark-color);
            font-size: 0.95rem;
            margin: 0;
            display: flex;
            align-items: center;
        }

        .recommendation-info i {
            color: var(--primary-color);
            margin-right: 0.8rem;
            font-size: 1.1rem;
        }

        /* Containers */
        .favorites-container, .recommendations-container {
            margin-bottom: 2rem;
            padding-bottom: 2rem;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            scroll-margin-top: 2rem;
            animation: fadeIn 0.8s ease-out;
        }

        /* Product grid */
        .products-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
            gap: 1.5rem;
        }

        /* Product card styling */
        .product-card {
            background: white;
            border-radius: var(--card-radius);
            overflow: hidden;
            box-shadow: var(--box-shadow);
            transition: var(--transition);
            display: flex;
            flex-direction: column;
            border: 1px solid rgba(0,0,0,0.03);
            height: 100%;
            position: relative;
            max-width: 100%;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0,0,0,0.12);
        }

        .image-container {
            position: relative;
            width: 100%;
            height: 200px;
            overflow: hidden;
            background: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            transition: transform 0.6s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        .product-card:hover .image-container img {
            transform: scale(1.08);
        }

        .wishlist-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            width: 35px;
            height: 35px;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            box-shadow: 0 3px 8px rgba(0,0,0,0.12);
            z-index: 2;
            border: none;
            color: var(--gray-color);
            transition: var(--transition);
            opacity: 0.9;
        }

        .wishlist-btn:hover {
            color: var(--secondary-color);
            transform: scale(1.15) rotate(5deg);
            opacity: 1;
        }

        .discount-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            background: var(--secondary-color);
            color: white;
            padding: 0.4rem 0.8rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            z-index: 2;
            box-shadow: 0 3px 8px rgba(233, 64, 87, 0.3);
            letter-spacing: 0.3px;
        }

        .card-content {
            padding: 1.2rem;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .product-name {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 0.6rem;
            color: var(--dark-color);
            line-height: 1.3;
            transition: var(--transition);
        }

        .product-card:hover .product-name {
            color: var(--primary-color);
        }

        .product-description {
            font-size: 0.85rem;
            color: var(--gray-color);
            margin-bottom: 1rem;
            flex-grow: 1;
            line-height: 1.5;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .product-price {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 0.8rem;
        }

        .product-stock {
            font-size: 0.8rem;
            color: var(--gray-color);
            margin-bottom: 1.2rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            border-top: 1px solid #f0f0f0;
            padding-top: 0.8rem;
        }

        .product-stock i {
            color: var(--accent-color);
        }

        .add-to-cart {
            margin-top: auto;
            width: 100%;
            padding: 0.8rem;
            background: linear-gradient(135deg, var(--accent-color), #ff9800);
            color: white;
            border: none;
            border-radius: var(--input-radius);
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.6rem;
            transition: var(--transition);
            letter-spacing: 0.3px;
            box-shadow: 0 4px 10px rgba(255, 165, 0, 0.2);
            text-transform: uppercase;
            font-size: 0.85rem;
            overflow: hidden;
            position: relative;
        }

        .add-to-cart:after {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0));
            transform: translateX(-100%);
            transition: var(--transition);
        }

        .add-to-cart:hover:after {
            transform: translateX(0);
        }

        .add-to-cart:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 16px rgba(255, 165, 0, 0.3);
        }

        .line-cart {
            color: white;
            text-decoration: none;
            position: relative;
            z-index: 2;
        }

        /* Product category styling */
        .product-category {
            position: absolute;
            bottom: 10px;
            left: 10px;
            background: rgba(255, 255, 255, 0.9);
            padding: 5px 10px;
            border-radius: 15px;
            font-size: 0.75rem;
            font-weight: 600;
            color: var(--dark-color);
            z-index: 2;
            box-shadow: 0 2px 6px rgba(0,0,0,0.08);
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .product-category i {
            color: var(--primary-color);
        }

        /* Original price for discounted items */
        .original-price {
            text-decoration: line-through;
            font-size: 0.85rem;
            color: var(--gray-color);
            margin-right: 0.8rem;
            font-weight: normal;
        }

        /* No image icon */
        .no-image-icon {
            font-size: 2.5rem;
            color: #e0e0e0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
            width: 100%;
        }

        /* Pagination styling */
        .navigation {
            margin: 2rem 0;
        }

        .pagination {
            display: flex;
            justify-content: center;
            gap: 0.5rem;
        }

        .pagination .page-item {
            list-style: none;
        }

        .pagination .page-link {
            display: flex;
            align-items: center;
            justify-content: center;
            min-width: 40px;
            height: 40px;
            padding: 0 12px;
            background: white;
            border-radius: 8px;
            color: var(--dark-color);
            font-weight: 500;
            text-decoration: none;
            box-shadow: 0 3px 8px rgba(0,0,0,0.08);
            transition: all 0.25s ease;
            border: 1px solid rgba(0,0,0,0.03);
        }

        .pagination .page-item.active .page-link {
            background: var(--primary-color);
            color: white;
            font-weight: 600;
            box-shadow: 0 5px 12px rgba(43, 147, 195, 0.3);
        }

        .pagination .page-link:hover {
            background: rgba(43, 147, 195, 0.08);
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.12);
        }

        .pagination .page-item.disabled .page-link {
            opacity: 0.5;
            cursor: not-allowed;
            pointer-events: none;
        }

        /* Toast notification styling */
        #toast-container .toast {
            opacity: 1;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            border-radius: 10px;
        }

        #toast-container .toast-success {
            background-color: #4caf50;
        }

        #toast-container .toast-info {
            background-color: var(--primary-color);
        }

        #toast-container .toast-error {
            background-color: var(--secondary-color);
        }

        /* Responsive */
        @media (max-width: 1200px) {
            .products-grid {
                grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            }
        }

        @media (max-width: 992px) {
            .products-grid {
                grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
                gap: 1.2rem;
            }

            .image-container {
                height: 180px;
            }

            .page-header h1 {
                font-size: 2rem;
            }
        }

        @media (max-width: 768px) {
            .products-grid {
                grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
                gap: 1rem;
            }

            .image-container {
                height: 160px;
            }

            .card-content {
                padding: 1rem;
            }

            .section-title {
                font-size: 1.3rem;
            }
        }

        @media (max-width: 576px) {
            .products-grid {
                grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
                gap: 0.8rem;
            }

            .image-container {
                height: 140px;
            }

            .card-content {
                padding: 0.8rem;
            }

            .product-name {
                font-size: 0.9rem;
            }

            .product-description {
                font-size: 0.8rem;
                -webkit-line-clamp: 2;
            }

            .add-to-cart {
                padding: 0.6rem;
                font-size: 0.75rem;
            }

            .section-title {
                font-size: 1.2rem;
            }

            .page-header h1 {
                font-size: 1.8rem;
            }

            .page-header p {
                font-size: 0.9rem;
            }
        }
    </style>
{% endblock %}

{% block content %}
    <div class="container" style="max-width: 1400px; margin: 3rem auto; padding: 0 2rem;">
        <div class="page-header">
            <h1><i class="fas fa-heart"></i> Vos Favoris & Recommandations</h1>
            <p>Découvrez des produits similaires à ceux que vous avez aimés et explorez de nouvelles possibilités</p>
        </div>

        <div class="favorites-container">
            <h2 class="section-title">
                <div>
                    <i class="fas fa-heart"></i> Vos Produits Favoris
                </div>
                {% if likedProducts.getTotalItemCount > 0 %}
                    <div class="product-count">
                        {{ likedProducts.getTotalItemCount }} produit(s)
                    </div>
                {% endif %}
            </h2>

            {% if likedProducts is empty or likedProducts.getTotalItemCount == 0 %}
                <div class="empty-section">
                    <i class="far fa-heart"></i>
                    <h3>Vous n'avez pas encore de favoris</h3>
                    <p>Explorez notre boutique et ajoutez des produits à vos favoris en cliquant sur l'icône cœur sur les produits qui vous plaisent.</p>
                </div>
            {% else %}
                <div class="products-grid">
                    {% for produit in likedProducts %}
                        <div class="product-card">
                            <div class="image-container">
                                {% if produit.produit.image_url %}
                                    <img src="{{ asset(produit.produit.image_url) }}" alt="{{ produit.produit.nom }}" loading="lazy">
                                {% else %}
                                    <div class="no-image-icon">
                                        <i class="fas fa-box-open"></i>
                                    </div>
                                {% endif %}


                                <button
                                        class="wishlist-btn like-button"
                                        data-product-id="{{ produit.produit.id }}"
                                        data-liked="true"
                                        style="color: red;">
                                    <i class="fas fa-heart"></i>
                                </button>

                                {% if produit.produit.promotionId is not null and produit.produit.promotionId.getDiscountPercentage() %}
                                    <div class="discount-badge">-{{ produit.produit.promotionId.getDiscountPercentage() }}%</div>
                                {% endif %}

                                {% if produit.produit.getShopId() and produit.produit.getShopId().getCategorie() %}
                                    <div class="product-category">
                                        <i class="fas fa-tag"></i> {{ produit.produit.getShopId().getCategorie().getNom() }}
                                    </div>
                                {% endif %}
                            </div>

                            <div class="card-content">
                                <h3 class="product-name">{{ produit.produit.nom }}</h3>

                                {% if produit.produit.description %}
                                    <p class="product-description">{{ produit.produit.description|length > 100 ? produit.produit.description|slice(0, 100) ~ '...' : produit.produit.description }}</p>
                                {% endif %}

                                <div class="product-price">
                                    {% if produit.produit.promotionId is not null and produit.produit.promotionId.getDiscountPercentage() %}
                                        <span class="original-price">${{ produit.produit.prix|number_format(2) }}</span>
                                        <span>${{ produit.produit.getDiscountedPrice() }}</span>
                                    {% else %}
                                        ${{ produit.produit.prix|number_format(2) }}
                                    {% endif %}
                                </div>

                                <div class="product-stock">
                                    <i class="fas fa-cubes"></i> {{ produit.produit.stock }} disponible(s)
                                </div>

                                <button class="add-to-cart">
                                    <i class="fas fa-shopping-cart"></i>
                                    <a class="line-cart" href="{{ path('app_add_itemLiked', {
                                        'idProduit': produit.produit.id
                                    }) }}">Ajouter au Panier</a>
                                </button>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                {# Pagination pour les favoris #}
                <div class="navigation">
                    <div class="navigation">
                        {{ knp_pagination_render(likedProducts, null, {}, {'align': 'center', 'size': 'medium', 'rounded': true, 'pageParameter': 'liked_page'}) }}
                    </div>                </div>
            {% endif %}
        </div>

        <div class="recommendations-container">
            <h2 class="section-title">
                <div>
                    <i class="fas fa-lightbulb"></i> Recommandations Personnalisées
                </div>
                {% if recommendedProducts.getTotalItemCount > 0 %}
                    <div class="product-count">
                        {{ recommendedProducts.getTotalItemCount }} produit(s)
                    </div>
                {% endif %}
            </h2>

            {% if recommendedProducts is empty or recommendedProducts.getTotalItemCount == 0 %}
                <div class="empty-section">
                    <i class="fas fa-robot"></i>
                    <h3>Pas de recommandations disponibles</h3>
                    <p>Ajoutez des produits à vos favoris pour recevoir des recommandations personnalisées basées sur vos préférences.</p>
                </div>
            {% else %}
                <div class="recommendation-info">
                    <p><i class="fas fa-info-circle"></i> Ces produits ont été sélectionnés pour vous basés sur vos préférences précédentes et vos catégories favorites.</p>
                </div>

                <div class="products-grid">
                    {% for produit in recommendedProducts %}
                        <div class="product-card">
                            <div class="image-container">
                                {% if produit.image_url %}
                                    <img src="{{ asset(produit.image_url) }}" alt="{{ produit.nom }}" loading="lazy">
                                {% else %}
                                    <div class="no-image-icon">
                                        <i class="fas fa-box-open"></i>
                                    </div>
                                {% endif %}

                                <button
                                        class="wishlist-btn like-button"
                                        data-product-id="{{ produit.id }}"
                                        data-liked="{{ app.user and produit.isLikedByUser(app.user) ? 'true' : 'false' }}"
                                        style="color: {{ app.user and produit.isLikedByUser(app.user) ? 'red' : '#999' }};">
                                    <i class="{{ app.user and produit.isLikedByUser(app.user) ? 'fas' : 'far' }} fa-heart"></i>
                                </button>

                                {% if produit.getDiscountPercentage() %}
                                    <div class="discount-badge">-{{ produit.getDiscountPercentage() }}%</div>
                                {% endif %}

                                {% if produit.getShopId() and produit.getShopId().getCategorie() %}
                                    <div class="product-category">
                                        <i class="fas fa-tag"></i> {{ produit.getShopId().getCategorie().getNom() }}
                                    </div>
                                {% endif %}
                            </div>

                            <div class="card-content">
                                <h3 class="product-name">{{ produit.nom }}</h3>

                                {% if produit.description %}
                                    <p class="product-description">{{ produit.description|length > 100 ? produit.description|slice(0, 100) ~ '...' : produit.description }}</p>
                                {% endif %}

                                <div class="product-price">
                                    {% if produit.getDiscountPercentage() %}
                                        <span class="original-price">${{ produit.prix|number_format(2) }}</span>
                                        <span>${{ produit.getDiscountedPrice() }}</span>
                                    {% else %}
                                        ${{ produit.prix|number_format(2) }}
                                    {% endif %}
                                </div>

                                <div class="product-stock">
                                    <i class="fas fa-cubes"></i> {{ produit.stock }} disponible(s)
                                </div>

                                <button class="add-to-cart">
                                    <i class="fas fa-shopping-cart"></i>
                                    <a class="line-cart" href="{{ path('app_add_itemLiked', {
                                        'idProduit': produit.id
                                    }) }}">Ajouter au Panier</a>
                                </button>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                {# Pagination pour les recommandations #}
                <div class="navigation">
                    {{ knp_pagination_render(recommendedProducts, null, {}, {'align': 'center', 'size': 'medium', 'rounded': true, 'pageParameter': 'recommended_page'}) }}
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Configuration des notifications toastr
            toastr.options = {
                closeButton: true,
                progressBar: true,
                positionClass: "toast-top-right",
                timeOut: 3000,
                extendedTimeOut: 1000,
                preventDuplicates: true
            };

            // Gestionnaire d'événements pour les boutons "J'aime"
            document.querySelectorAll('.like-button').forEach(button => {

                button.addEventListener('click', function() {
                    const productId = this.dataset.productId;
                    const icon = this.querySelector('i');
                    const isLiked = this.dataset.liked === 'true';

                    fetch('/product/' + productId + '/like', {
                        method: 'POST',
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    })
                        .then(response => response.json())
                        .then(data => {
                            if (data.liked) {
                                icon.classList.remove('far');
                                icon.classList.add('fas');
                                this.style.color = 'red';
                                this.dataset.liked = 'true';

                                // Animation effect
                                this.animate([
                                    { transform: 'scale(1)' },
                                    { transform: 'scale(1.3)' },
                                    { transform: 'scale(1)' }
                                ], {
                                    duration: 300,
                                    easing: 'ease-in-out'
                                });

                                toastr.success('Produit ajouté à vos favoris');
                            } else {
                                icon.classList.remove('fas');
                                icon.classList.add('far');
                                this.style.color = '#999';
                                this.dataset.liked = 'false';
                                toastr.info('Produit retiré de vos favoris');

                                // Si le produit était dans la section des favoris et a été retiré
                                if (window.location.pathname.includes('favoris')) {
                                    // Trouver la carte de produit parente et l'animer pour la faire disparaître
                                    const productCard = this.closest('.product-card');
                                    if (productCard) {
                                        productCard.style.transition = 'all 0.5s ease';
                                        productCard.style.opacity = '0';
                                        productCard.style.transform = 'scale(0.8)';

                                        setTimeout(() => {
                                            // Animation terminée, supprimer l'élément ou recharger la page
                                            // Vérifier si c'était le dernier produit favoris
                                            const remainingCards = document.querySelectorAll('.favorites-container .product-card').length;
                                            if (remainingCards <= 1) {
                                                // Reload pour montrer la section vide
                                                window.location.reload();
                                            } else {
                                                productCard.remove();

                                                // Mettre à jour le compteur de produits
                                                const countElem = document.querySelector('.favorites-container .product-count');
                                                if (countElem) {
                                                    const currentCount = parseInt(countElem.textContent);
                                                    if (currentCount > 0) {
                                                        countElem.textContent = (currentCount - 1) + " produit(s)";
                                                    }
                                                }
                                            }
                                        }, 500);
                                    }
                                }
                            }
                            window.location.reload();
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            toastr.error('Une erreur est survenue');
                        })
                        .finally(() => {
                            // Recharge la page après la requête AJAX
                            window.location.reload();
                        });
                });
            });
        });
    </script>
